<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_marginTop="15dp"
    android:layout_marginStart="5dp"
    android:layout_height="match_parent"
    android:layout_marginEnd="15dp"
    android:orientation="vertical"
    tools:context=".CreateCarpool">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="450dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nametextview"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="Carpool"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/nameid"
                android:layout_width="274dp"
                android:layout_height="wrap_content"

                android:hint="School,Tuition etc.," />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/eventtextview"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Event  :"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/eventid"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:hint="Practice, Game" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/loctextid"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Location :"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/locationid"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:hint="Enter the address" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/owner"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Owner :"
                android:textSize="20sp"
                />
            <EditText
                android:id="@+id/Ownername"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:hint="Owner Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/member1"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Member 1 :"
                android:textSize="20sp"
                />
            <EditText
                android:id="@+id/member1edittext"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:hint="Member 1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/member2"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Member 2:"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/member2edittext"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:hint="Member 2" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/member3"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Member 3 :"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/member3edittext"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:hint="Member 3" />
        </LinearLayout>
        <Button
            android:id="@+id/savebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#21a472"
            android:text="save"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>