<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_marginTop="15dp"
    android:layout_marginStart="5dp"
    android:layout_height="match_parent"
    android:layout_marginEnd="15dp"
    android:orientation="vertical"
    tools:context=".CreateEvent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="500dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nametextview"
                android:layout_marginStart="13dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carpool"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/nameide"
                android:layout_width="274dp"
                android:layout_height="wrap_content"

                android:hint="School,Tuition etc.," />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/eventtextview"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:text="Event  :"
                android:textSize="15sp"
                />

            <EditText
                android:id="@+id/eventide"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:hint="Practice, Game" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/loctextid"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:text="Location :"
                android:textSize="15sp"
                />

            <EditText
                android:id="@+id/locationide"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:hint="Enter the address" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/owner"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:text="Owner :"
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/Owneride"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Owner Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/member1"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Member1Email"
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/member1edittexte"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Member 1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/member2"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Member2Email"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/member2edittexte"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Member 2" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/member3"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Member3Email:"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/member3edittexte"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Member 3" />
        </LinearLayout>
        <Button

            android:id="@+id/schedulebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="128dp"
            android:text="schedule Carpool"/>
        <Button
            android:id="@+id/savebtne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#21a472"
            android:text="save"
            android:visibility="invisible"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textStyle="bold" />




    </LinearLayout>


</LinearLayout>